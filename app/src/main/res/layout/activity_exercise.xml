<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondengland2"
    tools:context="com.example.baptiste.exerciseha.ExerciseActivity">


    <!-- BOTTOM ICONES -->

    <!-- android:tint="#FFFFFF" -->
    <ImageView
        android:id="@+id/image0"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:onClick="onImageX"
        android:tag="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/image1"
        app:layout_constraintTop_toBottomOf="@+id/imageCentre"
        app:layout_constraintVertical_bias="0.84"
        app:srcCompat="@drawable/shad_leg" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="0dp"
        android:onClick="onImageX"
        android:tag="1"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintLeft_toRightOf="@+id/image0"
        app:layout_constraintRight_toLeftOf="@+id/image2"
        app:layout_constraintTop_toTopOf="@+id/image0"
        app:layout_constraintBottom_toBottomOf="@+id/image0"
        app:srcCompat="@drawable/shad_leg" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:onClick="onImageX"
        android:tag="2"
        app:layout_constraintBottom_toBottomOf="@+id/image0"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintLeft_toRightOf="@+id/image1"
        app:layout_constraintRight_toLeftOf="@+id/image3"
        app:layout_constraintTop_toTopOf="@+id/image0"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/shad_leg" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="0dp"
        android:onClick="onImageX"
        android:tag="3"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintLeft_toRightOf="@+id/image2"
        app:layout_constraintRight_toLeftOf="@+id/image4"
        app:layout_constraintTop_toTopOf="@+id/image0"
        app:layout_constraintBottom_toBottomOf="@+id/image0"
        app:srcCompat="@drawable/shad_leg" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="0dp"
        android:onClick="onImageX"
        android:tag="4"
        app:layout_constraintHorizontal_bias="0.771"
        app:layout_constraintLeft_toRightOf="@+id/image3"
        app:layout_constraintRight_toLeftOf="@+id/image5"
        app:layout_constraintTop_toTopOf="@+id/image0"
        app:layout_constraintBottom_toBottomOf="@+id/image0"
        app:srcCompat="@drawable/shad_leg" />

    <ImageView
        android:id="@+id/image5"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="0dp"
        android:onClick="onImageX"
        android:tag="5"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintLeft_toRightOf="@+id/image4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image0"
        app:layout_constraintBottom_toBottomOf="@+id/image0"
        app:srcCompat="@drawable/shad_leg" />


    <!-- CENTRAL PICTURE -->

    <ImageView
        android:id="@+id/imageCentre"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:onClick="onStartClick"
        android:tag=""
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />


</android.support.constraint.ConstraintLayout>
